<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="tabIndicators" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>
    <style name="BackMenuStyleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="BackMenuStyleImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="contentDescription">@string/back</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="mainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="cornerRadius">@dimen/value_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="smallButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:paddingStart">@dimen/value_14</item>
        <item name="android:paddingEnd">@dimen/value_14</item>
        <item name="cornerRadius">54dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="longButtons">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="settingsMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:paddingStart">@dimen/value_16</item>
        <item name="android:paddingEnd">@dimen/value_12</item>
        <item name="android:paddingVertical">@dimen/value_24</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
    <style name="recyclerSecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_icons</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="playlistMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:gravity">fill</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingHorizontal">@dimen/value_16</item>
        <item name="android:paddingVertical">@dimen/value_21</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="textPlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/value_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="audioPlayerDescriptionText">
        <item name="android:textColor">@color/menu_icons</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>
    <style name="audioPlayerDescriptionValues">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginStart">@dimen/value_16</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>
    <style name="audioPlayerButtons">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">29dp</item>
    </style>

    <style name="divider_context_nav_bar">
        <item name="android:backgroundTint">#E6E8EB</item>
        <item name="android:background">#E6E8EB</item>
    </style>

    <style name="GuideLines">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ImagePlaylist">
        <item name="android:src">@drawable/placeholderimg</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:background">@drawable/dashed_bg_shape</item>
    </style>
    <style name="InputLayoutPlaylist" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>
    <style name="InputTextPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/white</item>
        <item name="android:backgroundDimAmount">0.60</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogBodyText</item>
    </style>
    <style name="MaterialAlertDialogTitleText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MaterialAlertDialogBodyText" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="PlaylistRecyclerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="PlaylistIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/black</item>
        <item name="android:layout_marginTop">@dimen/value_16</item>
    </style>
    <style name="BottomSheetLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_bottom_sheet_light</item>
        <item name="behavior_hideable">true</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>
    <style name="BottomSheetLinearLayoutThemed" parent="BottomSheetLinearLayout">
        <item name="android:paddingHorizontal">@dimen/value_13</item>
    </style>
    <style name="BottomSheetHandle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/value_8</item>
        <item name="android:background">@drawable/shape_bottom_sheet_handler</item>
    </style>
</resources>