<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackMenuStyleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="BackMenuStyleImg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="contentDescription">@string/back</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="mainButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="cornerRadius">@dimen/value_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="smallButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:paddingStart">@dimen/value_14</item>
        <item name="android:paddingEnd">@dimen/value_14</item>
        <item name="cornerRadius">54dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="settingsMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:paddingStart">@dimen/value_16</item>
        <item name="android:paddingEnd">@dimen/value_12</item>
        <item name="android:paddingVertical">@dimen/value_24</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
    <style name="audioPlayerDescriptionText">
        <item name="android:textColor">@color/menu_icons</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>
    <style name="audioPlayerDescriptionValues">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginStart">@dimen/value_16</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>
    <style name="audioPlayerButtons">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">29dp</item>
    </style>
</resources>