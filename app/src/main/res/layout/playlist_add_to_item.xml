<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackRootLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="13dp"
    android:gravity="center_vertical">

    <ImageView
    android:id="@+id/playlistAddCover"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:scaleType="centerCrop"
    android:src="@drawable/placeholderph"
    />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/playlistAddName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/ys_display_regular"
            tools:text="@string/title"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/playlistAddTrackCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/menu_icons"
            android:fontFamily="@font/ys_display_regular"
            tools:text="@string/playlist_add_to_placeholder"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>

</LinearLayout>