<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorSurface">@null</item>
        <item name="colorPrimary">@color/knob_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/fields_icons</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">?attr/colorSurface</item>
        <item name="backgroundTint">@null</item>
        <item name="itemTextAppearanceInactive">@color/bottom_nav_tint</item>
        <item name="itemTextAppearanceActive">@color/bottom_nav_tint</item>
        <item name="itemIconTint">@color/bottom_nav_tint</item>
        <item name="itemTextColor">@color/bottom_nav_tint</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
    </style>



</resources>