<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/value_16"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/back"
            android:src="@drawable/arrow_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_gravity="center_vertical"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/text_22" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:paddingStart="@dimen/value_16"
        android:paddingEnd="12dp"
        android:paddingVertical="@dimen/value_21"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/night_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="end|center_vertical"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/share_app"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableEndCompat="@drawable/ic_share"
        android:paddingStart="@dimen/value_16"
        android:paddingEnd="12dp"
        android:paddingVertical="@dimen/value_21"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/contact_support"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableEndCompat="@drawable/ic_contact"
        android:paddingStart="@dimen/value_16"
        android:paddingEnd="12dp"
        android:paddingVertical="@dimen/value_21"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/eula"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:drawableEndCompat="@drawable/ic_forward"
        android:paddingStart="@dimen/value_16"
        android:paddingEnd="12dp"
        android:paddingVertical="@dimen/value_21"
        />

</LinearLayout>